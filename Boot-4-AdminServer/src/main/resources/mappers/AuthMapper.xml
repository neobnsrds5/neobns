<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neo.adminserver.mapper.AuthMapper">

    <select id="findById" parameterType="String" resultType="FwkUserDTO">
        SELECT * FROM FWK_USER
    	WHERE USER_ID = #{username}
    </select>
    
    <update id="updateUserSession">
        UPDATE FWK_USER
        SET
            FINAL_APPROVAL_USER_NAME = #{sessionid},
            LAST_UPDATE_DTIME = #{dtime}
        WHERE
            USER_ID = #{username}
    </update>

</mapper>
