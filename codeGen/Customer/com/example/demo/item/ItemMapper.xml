<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.item.ItemMapper">

    <select id="findAll" resultType="com.example.demo.item.ItemDto">
        SELECT * FROM item
    </select>

    <select id="findByPage" resultType="com.example.demo.item.ItemDto">
        SELECT * FROM item

        <!-- Add dynamic filters here -->
        <where>
        	1=1
        	<if test="id != null"> AND id = #{id}</if>
<if test="name != null"> AND name = #{name}</if>

        </where>
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="findById" resultType="com.example.demo.item.ItemDto">
        SELECT * FROM item WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO item (id, name)
        VALUES (#{id}, #{name})
    </insert>

    <update id="update">
        UPDATE item
        SET id = #{id}, name = #{name}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM item WHERE id = #{id}
    </delete>

</mapper>
