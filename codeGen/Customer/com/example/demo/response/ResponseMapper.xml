<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.response.ResponseMapper">

    <select id="findAll" resultType="com.example.demo.response.ResponseDto">
        SELECT * FROM response
    </select>

    <select id="findByPage" resultType="com.example.demo.response.ResponseDto">
        SELECT * FROM response

        <!-- Add dynamic filters here -->
        <where>
        	1=1
        	<if test="message != null"> AND message = #{message}</if>

        </where>
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="findById" resultType="com.example.demo.response.ResponseDto">
        SELECT * FROM response WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO response (message)
        VALUES (#{message})
    </insert>

    <update id="update">
        UPDATE response
        SET message = #{message}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM response WHERE id = #{id}
    </delete>

</mapper>
